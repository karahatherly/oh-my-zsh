[color]
	ui = true
[color.grep]
    # These colours match those used by ack/ag
    filename = bold green
    linenumber = bold yellow
    match = black yellow
[push]
	default = simple
[branch]
	autosetuprebase = always
[rebase]
	autosquash = true
	autostash = true
[merge]
	tool = qvimdiff
    prompt = false
    trustExitCode = true
    keepBackup = false
[mergetool "qvimdiff"]
	cmd = /usr/bin/qvimdiff -d -f -c 'wincmd J' "$MERGED" "$LOCAL" "$BASE" "$REMOTE"
[url "git://anongit.kde.org/"]
	insteadOf = kde:
